<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiPasswordVault.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiPasswordVault.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Icon="Images/home.svg" Title="Home" Route="CheckPage">
            <ShellContent
                Title="Password vault"
                ContentTemplate="{DataTemplate views:CheckPage}"        
                Route="CheckPage">
            </ShellContent>
        </Tab>
        <Tab Icon="Images/information.svg" Title="About" Route="AboutPage">
            <ShellContent
                Title="About"
                ContentTemplate="{DataTemplate views:AboutPage}"        
                Route="AboutPage">
            </ShellContent>
        </Tab>
    </TabBar>

</Shell>
