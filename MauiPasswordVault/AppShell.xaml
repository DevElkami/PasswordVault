<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiPasswordVault.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiPasswordVault.View"
    Shell.FlyoutBehavior="Flyout">

    <TabBar>
        <Tab Title="Home" Route="CheckPage">
            <Tab.Icon>
                <FontImageSource FontFamily="AwesomeSolid" Glyph="&#xf2bb;" Color="Red" Size="50"/>
            </Tab.Icon>
            <ShellContent
        Title="Password vault"
        ContentTemplate="{DataTemplate views:CheckPage}"        
        Route="CheckPage">
                <ShellContent.Icon>
                    <FontImageSource FontFamily="AwesomeSolid" Glyph="&#xf2bb;" Color="Red" Size="50"/>
                </ShellContent.Icon>
            </ShellContent>
        </Tab>
        <Tab Title="Employers" Route="AboutPage">
            <Tab.Icon>
                <FontImageSource FontFamily="AwesomeSolid" Glyph="&#xf2bb;" Color="Red" Size="50"/>
            </Tab.Icon>
            <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate views:AboutPage}"        
        Route="AboutPage">
                <ShellContent.Icon>
                    <FontImageSource FontFamily="AwesomeSolid" Glyph="&#xf2bb;" Color="Red" Size="50"/>
                </ShellContent.Icon>
            </ShellContent>
        </Tab>
    </TabBar>

</Shell>
