<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MauiPasswordVault.ViewModel"                     
             x:Class="MauiPasswordVault.View.InitPage">

    <ScrollView HorizontalOptions="Fill" VerticalOptions="Fill">
        <VerticalStackLayout
            Spacing="25"
            Padding="30,30"
            VerticalOptions="FillAndExpand">

            <Image
                Source="logo.png"
                HeightRequest="100"
                HorizontalOptions="Start" />

            <Label
                Text="Initialize"
                FontSize="32"
                HorizontalOptions="Center" />

            <Entry Placeholder="Your password"  Text="{Binding NewVaultKey}" MaxLength="20" IsPassword="True"  MinimumWidthRequest="80" MaximumWidthRequest="200"></Entry>
            <Entry Placeholder="Confirm it" Text="{Binding ChkVaultKey}" MaxLength="20" IsPassword="True" MinimumWidthRequest="80" MaximumWidthRequest="200"></Entry>

            <Button
                MinimumWidthRequest="120"
                Text="Initialize"
                Command="{Binding InitCommand}"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
