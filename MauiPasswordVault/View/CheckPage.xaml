<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPasswordVault.View.CheckPage"             
             Title="Your password">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,30"
            VerticalOptions="FillAndExpand">

            <Image
                Source="logo.png"
                HeightRequest="100"
                HorizontalOptions="Start" />

            <Label
                Text="Check"
                FontSize="32"
                HorizontalOptions="Center" />

            <Entry Placeholder="Password" Text="{Binding VaultKey}" MaxLength="20" IsPassword="True" MinimumWidthRequest="80" MaximumWidthRequest="200"></Entry>

            <Button       
                MinimumWidthRequest="120"                
                Text="Check"               
                Command="{Binding CheckCommand}"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>